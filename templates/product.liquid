{% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}
<img src="{{ featured_image | img_url: 'large' }}" alt="{{ featured_image.alt | escape }}" id="ProductPhotoImg">
{% for image in product.images %}
  <a href="{{ image.src | img_url: 'large' }}">
    <img src="{{ image.src | img_url: 'compact' }}" alt="{{ image.alt | escape }}">
  </a>
{% endfor %}
<h1>{{ product.title }}</h1>
<form action="/cart/add" method="post" enctype="multipart/form-data" id="AddToCartForm">
  <select name="id" id="productSelect">
    {% for variant in product.variants %}
      {% if variant.available %}
        <option value="{{ variant.id }}">
          {{ variant.title }} - {{ variant.price | money_with_currency }}
        </option>
      {% else %}
        <option disabled="disabled">
          {{ variant.title }} - sold out
        </option>
      {% endif %}
    {% endfor %}
  </select>
    <p class="line-item-property__field">
        <label for="your-name">Cart Index</label>
        <input id="your-name" type="text" name="properties[cart_index]">
    </p>
    <p class="line-item-property__field">
        <label for="your-name">在庫</label>
        <input id="your-name" type="text" name="properties[cart_index]" value="{{ product.variants.first.inventory_quantity }}">
    </p>
    <p class="line-item-property__field">
        <label for="your-name">カートの商品の数</label>
        <input id="your-name" type="text" name="properties[cart_index]" value="{{ cart.item_count }}">
    </p>
  {{ current_variant.price | money }}
  <label for="Quantity">quantity</label>
    {%- assign result = product.variants.first.inventory_quantity | minus : cart.item_count -%}
    {% if result > 0 %}
  <input type="number" id="Quantity" name="quantity" value="1" min="1" max="{{ result }}">
  <button type="submit" name="add" id="AddToCart" class="add-cart-btn">Add to cart</button>
    {% else %}
  <input type="number" id="Quantity" name="quantity" value="0" value="0" disabled>
  <button type="submit" name="add" id="AddToCart" disabled>Add to cart</button>
    {% endif %}
</form>
<div>{{ product.description }}</div>
